<p id="notice"></p>
<div class="container px-5 px-em-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
            <tbody>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag @user.get_profile_image(40,40), class: 'attachment user profile_image fallback' %><br>
                  <%= book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>
