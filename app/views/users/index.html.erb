<p id="notice"></p>
<div class="container px-5 px-em-0">
  <%= render 'books/error' %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>naem</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <td>
              <%= image_tag @user.get_profile_image(100,100), class: 'attachment user profile_image fallback' %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>